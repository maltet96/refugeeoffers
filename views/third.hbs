{{> head}}
    <a class="backbutton" href="{{referer}}"><i class="fa fa-arrow-left fa-2x" aria-hidden="true"></i></a>
    {{> titleandlang}}
    </div>
    <div class="offerings">
        <div class="levelheadingcontainer">
            <h2 class="levelheading {{color}}">{{{category.icon}}}{{category.title}}</h2>
        </div>
            {{#each offerings}}
            <div class="offering {{../color}}">
                <h2 class="offeringName">{{this.name}}</h2>
                <img class="culturepic" src="{{this.picture}}">
                <a href='{{this.website}}'><h3>{{this.institution}}</h3></a>
                <p class="offeringDescription">{{{this.description}}}</p>
                <hr>
                <div class='contact'>
                  <p>{{this.address}}</p>
                  <p>{{this.contactPerson}}</p>
                  <a href='mailto:{{this.contactPersonEmailAddress}}'><i class="fa fa-envelope" aria-hidden="true"></i>{{this.contactPersonEmailAddress}}</a><br>
                  <a href='tel:{{this.contactPersonPhoneNumber}}'><i class="fa fa-phone" aria-hidden="true"></i>{{this.contactPersonPhoneNumber}}</a><br>
                  <p>{{{this.openingHours}}}</p>
                </div>
                <hr class='end'>
             </div>
         {{/each}}
    </div>
{{> foot}}
